@model LoginVM
<form  method="post" asp-action="Login">
    <h3 class="text-muted mb-1">Log In</h3>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" autocomplete="Email" class="form-control" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter your Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label><input type="checkbox" asp-for="RememberMe" /> Remember Me</label>
    </div>
    
    <button class="btn-primary my-2" type="submit">Login</button>

</form>